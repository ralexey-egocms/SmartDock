<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/primary"
    android:paddingTop="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="15dp"
    android:paddingLeft="15dp">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:orientation="vertical"
        android:weightSum="3"
        android:background="@android:color/background_dark">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:textSize="15dp"
            android:hint="Username"
            local:MvxLang="Text Login"
            android:layout_weight="1"
            android:textColor="@color/secondary_text" />
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:textSize="20dp"
            android:hint="Username"
            local:MvxBind="Text Login"
            local:MvxLang="Hint LoginHint"
            android:layout_weight="2"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/secondary_text" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:orientation="vertical"
        android:weightSum="3"
        android:background="@android:color/background_dark">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:textSize="15dp"
            android:hint="Password"
            local:MvxLang="Text Password"
            android:layout_weight="1"
            android:textColor="@color/secondary_text" />
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:textSize="20dp"
            android:hint="Password"
            local:MvxBind="Text Password"
            local:MvxLang="Hint PasswordHint"
            android:layout_weight="2"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/secondary_text"
            android:password="true" />
    </LinearLayout>
    <Button
        android:id="@+id/myButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        local:MvxLang="Text OnLoginButton"
        local:MvxBind="Click OnLoginCommand"
        android:background="@color/icons"
        android:textColor="@color/secondary_text"
        android:layout_marginTop="5dp"
        android:text="LogIn"
        android:gravity="center_vertical"
        android:paddingLeft="5dp" />
    <TextView
        android:text="Error text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/error_message"
        android:gravity="center"
        android:textColor="@android:color/holo_red_light"
        local:MvxBind="Text Error" />
</LinearLayout>